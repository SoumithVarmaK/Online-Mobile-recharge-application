<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlapshScreen"
    android:background="@drawable/ic_app_bg">

    <ImageView
        android:id="@+id/mobileImg"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mobile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/coinImg"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coin"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mobileImg"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/EasyName"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textSize="50dp"
        android:fontFamily="@font/playball"
        android:textColor="#000000"
        android:shadowColor="#ffffff"
        app:layout_constraintRight_toLeftOf="@id/ic_spark"
        android:layout_marginRight="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0"/>

    <ImageView
        app:layout_constraintLeft_toRightOf="@id/EasyName"
        app:layout_constraintRight_toLeftOf="@id/ChargeName"
        android:id="@+id/ic_spark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_spark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ic_spark_cover"
        android:outlineAmbientShadowColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ChargeName"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charge"
        android:textSize="50dp"
        android:fontFamily="@font/playball"
        android:textColor="#000000"
        android:shadowColor="#ffffff"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toRightOf="@id/ic_spark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0
"/>

</androidx.constraintlayout.widget.ConstraintLayout>